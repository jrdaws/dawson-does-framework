      "category": "user-management",
      "complexity": "medium",
      "dependencies": [],
      "templates": [
        "user-management/social-login/lib/auth/social-providers.ts",
        "user-management/social-login/app/(auth)/login/social-buttons.tsx"
      ],
      "envVars": ["GOOGLE_CLIENT_ID", "GOOGLE_CLIENT_SECRET", "GITHUB_CLIENT_ID", "GITHUB_CLIENT_SECRET"],
      "packages": []
    },
    "email-registration": {
