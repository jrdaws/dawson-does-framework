{
  "$schema": "./feature-mapping.schema.json",
  "version": "1.0.0",
  "description": "Maps features to their code templates for project generation",
  "categories": {
    "user-management": {
      "label": "User Management",
      "description": "Authentication, profiles, and admin features",
      "icon": "users"
    },
    "product-database": {
      "label": "Product Database",
      "description": "Data models and content management",
      "icon": "database"
    },
    "search-filter": {
      "label": "Search & Filter",
      "description": "Finding and organizing content",
      "icon": "search"
    },
    "ecommerce": {
      "label": "E-commerce",
      "description": "Shopping cart, checkout, and payments",
      "icon": "shopping-cart"
    },
    "analytics": {
      "label": "Analytics",
      "description": "Tracking, metrics, and reporting",
      "icon": "bar-chart"
    }
  },
