# SaaS Template Environment Variables
# Copy this file to .env.local and fill in your values

# ==============================================
# Authentication (required - choose one)
# ==============================================

# Supabase Auth (default)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Clerk Auth (alternative)
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
# CLERK_SECRET_KEY=sk_test_xxxxx

# ==============================================
# Database (required)
# ==============================================

# Supabase (uses same URL as auth)
# DATABASE_URL=postgresql://...

# PlanetScale (alternative)
# DATABASE_URL=mysql://...

# ==============================================
# Payments (optional - choose one)
# ==============================================

# Stripe (default)
# STRIPE_SECRET_KEY=sk_test_xxxxx
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Paddle
# PADDLE_VENDOR_ID=your-vendor-id
# PADDLE_API_KEY=your-api-key
# NEXT_PUBLIC_PADDLE_VENDOR_ID=your-vendor-id

# ==============================================
# Email (optional - choose one)
# ==============================================

# Resend
# RESEND_API_KEY=re_xxxxx

# SendGrid
# SENDGRID_API_KEY=SG.xxxxx

# ==============================================
# AI (optional - choose one)
# ==============================================

# OpenAI
# OPENAI_API_KEY=sk-xxxxx

# Anthropic
# ANTHROPIC_API_KEY=sk-ant-xxxxx

# ==============================================
# Analytics (optional - choose one)
# ==============================================

# PostHog
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Plausible
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com

# ==============================================
# Site Configuration
# ==============================================

NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=My SaaS App
