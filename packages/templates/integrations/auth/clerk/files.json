{
  "id": "clerk",
  "name": "Clerk",
  "category": "auth",
  "version": "1.0.0",
  "description": "Drop-in authentication with Clerk - includes sign in, sign up, and user management",
  "files": [
    {
      "path": "components/auth/ClerkProvider.tsx",
      "template": "components/ClerkProvider.tsx",
      "transform": "none"
    },
    {
      "path": "components/auth/UserButton.tsx",
      "template": "components/UserButton.tsx",
      "transform": "none"
    },
    {
      "path": "components/auth/SignInButton.tsx",
      "template": "components/SignInButton.tsx",
      "transform": "none"
    },
    {
      "path": "middleware.ts",
      "template": "middleware.ts",
      "transform": "none"
    },
    {
      "path": "app/sign-in/[[...sign-in]]/page.tsx",
      "template": "app/sign-in/page.tsx",
      "transform": "none"
    },
    {
      "path": "app/sign-up/[[...sign-up]]/page.tsx",
      "template": "app/sign-up/page.tsx",
      "transform": "none"
    }
  ],
  "dependencies": {
    "npm": {
      "@clerk/nextjs": "^5.0.0"
    },
    "npmDev": {},
    "env": [
      {
        "name": "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
        "description": "Your Clerk publishable key",
        "required": true,
        "example": "pk_test_...",
        "public": true
      },
      {
        "name": "CLERK_SECRET_KEY",
        "description": "Your Clerk secret key",
        "required": true,
        "example": "sk_test_...",
        "public": false
      },
      {
        "name": "NEXT_PUBLIC_CLERK_SIGN_IN_URL",
        "description": "Sign in page URL",
        "required": false,
        "example": "/sign-in",
        "public": true
      },
      {
        "name": "NEXT_PUBLIC_CLERK_SIGN_UP_URL",
        "description": "Sign up page URL",
        "required": false,
        "example": "/sign-up",
        "public": true
      }
    ]
  },
  "postInstall": [
    "1. Create a Clerk account at https://clerk.com",
    "2. Create an application and get your API keys",
    "3. Add NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY and CLERK_SECRET_KEY to .env.local",
    "4. Wrap your app with ClerkProvider in layout.tsx"
  ],
  "mergeInto": [
    {
      "file": "app/layout.tsx",
      "type": "provider",
      "content": "<ClerkProvider>",
      "position": "wrap-children"
    }
  ]
}

