{
  "id": "algolia",
  "name": "Algolia",
  "category": "search",
  "version": "1.0.0",
  "description": "Lightning-fast search with Algolia - includes search UI components and indexing utilities",
  "files": [
    {
      "path": "lib/search/algolia.ts",
      "template": "lib/algolia.ts",
      "transform": "none"
    },
    {
      "path": "lib/search/indexer.ts",
      "template": "lib/indexer.ts",
      "transform": "none"
    },
    {
      "path": "components/search/SearchBox.tsx",
      "template": "components/SearchBox.tsx",
      "transform": "none"
    },
    {
      "path": "components/search/SearchResults.tsx",
      "template": "components/SearchResults.tsx",
      "transform": "none"
    },
    {
      "path": "components/search/SearchModal.tsx",
      "template": "components/SearchModal.tsx",
      "transform": "none"
    },
    {
      "path": "hooks/useSearch.ts",
      "template": "hooks/useSearch.ts",
      "transform": "none"
    }
  ],
  "dependencies": {
    "npm": {
      "algoliasearch": "^4.23.0",
      "react-instantsearch": "^7.6.0",
      "@algolia/autocomplete-js": "^1.17.0"
    },
    "npmDev": {},
    "env": [
      {
        "name": "NEXT_PUBLIC_ALGOLIA_APP_ID",
        "description": "Your Algolia Application ID",
        "required": true,
        "example": "XXXXXXXXXX",
        "public": true
      },
      {
        "name": "NEXT_PUBLIC_ALGOLIA_SEARCH_KEY",
        "description": "Your Algolia Search-Only API Key",
        "required": true,
        "example": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
        "public": true
      },
      {
        "name": "ALGOLIA_ADMIN_KEY",
        "description": "Your Algolia Admin API Key (for indexing)",
        "required": true,
        "example": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
        "public": false
      },
      {
        "name": "NEXT_PUBLIC_ALGOLIA_INDEX_NAME",
        "description": "Your Algolia index name",
        "required": true,
        "example": "products",
        "public": true
      }
    ]
  },
  "postInstall": [
    "1. Create an Algolia account at https://www.algolia.com",
    "2. Create an application and get your API keys",
    "3. Create an index and note the index name",
    "4. Add all env vars to your .env.local"
  ]
}

