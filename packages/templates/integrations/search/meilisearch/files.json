{
  "id": "meilisearch",
  "name": "Meilisearch",
  "category": "search",
  "description": "Lightning-fast, typo-tolerant search engine",
  "files": [
    { "path": "lib/search/meilisearch.ts", "template": "lib/meilisearch.ts" },
    { "path": "lib/search/indexer.ts", "template": "lib/indexer.ts" },
    { "path": "components/search/SearchBox.tsx", "template": "components/SearchBox.tsx" },
    { "path": "components/search/SearchResults.tsx", "template": "components/SearchResults.tsx" },
    { "path": "components/search/SearchModal.tsx", "template": "components/SearchModal.tsx" },
    { "path": "hooks/useSearch.ts", "template": "hooks/useSearch.ts" }
  ],
  "dependencies": {
    "npm": {
      "meilisearch": "^0.37.0"
    },
    "env": [
      "MEILISEARCH_HOST",
      "MEILISEARCH_API_KEY",
      "NEXT_PUBLIC_MEILISEARCH_HOST",
      "NEXT_PUBLIC_MEILISEARCH_SEARCH_KEY"
    ]
  },
  "postInstall": "Run Meilisearch locally with `docker run -p 7700:7700 getmeili/meilisearch`"
}

