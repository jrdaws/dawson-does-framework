{
  "id": "stripe",
  "name": "Stripe",
  "category": "payments",
  "version": "1.0.0",
  "description": "Complete Stripe integration with subscriptions, checkout, and customer portal",
  "files": [
    {
      "path": "lib/stripe/client.ts",
      "template": "lib/client.ts",
      "transform": "none"
    },
    {
      "path": "lib/stripe/server.ts",
      "template": "lib/server.ts",
      "transform": "none"
    },
    {
      "path": "lib/stripe/config.ts",
      "template": "lib/config.ts",
      "transform": "mustache"
    },
    {
      "path": "components/billing/PricingTable.tsx",
      "template": "components/PricingTable.tsx",
      "transform": "none"
    },
    {
      "path": "components/billing/CheckoutButton.tsx",
      "template": "components/CheckoutButton.tsx",
      "transform": "none"
    },
    {
      "path": "components/billing/BillingPortalButton.tsx",
      "template": "components/BillingPortalButton.tsx",
      "transform": "none"
    },
    {
      "path": "components/billing/SubscriptionStatus.tsx",
      "template": "components/SubscriptionStatus.tsx",
      "transform": "none"
    },
    {
      "path": "hooks/useSubscription.ts",
      "template": "hooks/useSubscription.ts",
      "transform": "none"
    },
    {
      "path": "app/api/stripe/checkout/route.ts",
      "template": "app/api/checkout/route.ts",
      "transform": "none"
    },
    {
      "path": "app/api/stripe/portal/route.ts",
      "template": "app/api/portal/route.ts",
      "transform": "none"
    },
    {
      "path": "app/api/webhooks/stripe/route.ts",
      "template": "app/api/webhooks/route.ts",
      "transform": "none"
    }
  ],
  "dependencies": {
    "npm": {
      "stripe": "^14.0.0",
      "@stripe/stripe-js": "^2.0.0"
    },
    "npmDev": {},
    "env": [
      {
        "name": "STRIPE_SECRET_KEY",
        "description": "Your Stripe secret key (starts with sk_)",
        "required": true,
        "example": "sk_test_...",
        "public": false
      },
      {
        "name": "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "description": "Your Stripe publishable key (starts with pk_)",
        "required": true,
        "example": "pk_test_...",
        "public": true
      },
      {
        "name": "STRIPE_WEBHOOK_SECRET",
        "description": "Webhook signing secret for verifying Stripe events",
        "required": true,
        "example": "whsec_...",
        "public": false
      },
      {
        "name": "STRIPE_PRICE_ID_FREE",
        "description": "Price ID for free tier (optional)",
        "required": false,
        "example": "price_...",
        "public": false
      },
      {
        "name": "STRIPE_PRICE_ID_PRO",
        "description": "Price ID for pro tier",
        "required": true,
        "example": "price_...",
        "public": false
      },
      {
        "name": "STRIPE_PRICE_ID_ENTERPRISE",
        "description": "Price ID for enterprise tier (optional)",
        "required": false,
        "example": "price_...",
        "public": false
      }
    ],
    "integrations": ["auth"]
  },
  "postInstall": [
    "1. Go to https://dashboard.stripe.com and get your API keys",
    "2. Add your keys to .env.local",
    "3. Create products and prices in Stripe Dashboard",
    "4. Add the price IDs to your .env.local",
    "5. Set up webhook endpoint: https://yourdomain.com/api/webhooks/stripe",
    "6. For local development, use: stripe listen --forward-to localhost:3000/api/webhooks/stripe"
  ]
}

