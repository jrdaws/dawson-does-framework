{
  "id": "contentful",
  "name": "Contentful",
  "category": "cms",
  "description": "Enterprise headless CMS with CDN and preview",
  "files": [
    { "path": "lib/contentful/client.ts", "template": "lib/client.ts" },
    { "path": "lib/contentful/queries.ts", "template": "lib/queries.ts" },
    { "path": "lib/contentful/types.ts", "template": "lib/types.ts" },
    { "path": "app/api/revalidate/route.ts", "template": "app/api/revalidate/route.ts" },
    { "path": "app/blog/page.tsx", "template": "app/blog/page.tsx" },
    { "path": "app/blog/[slug]/page.tsx", "template": "app/blog/slug/page.tsx" },
    { "path": "components/cms/BlogCard.tsx", "template": "components/BlogCard.tsx" },
    { "path": "components/cms/RichText.tsx", "template": "components/RichText.tsx" },
    { "path": "hooks/usePosts.ts", "template": "hooks/usePosts.ts" }
  ],
  "dependencies": {
    "npm": {
      "contentful": "^10.6.0",
      "@contentful/rich-text-react-renderer": "^15.19.0",
      "@contentful/rich-text-types": "^16.3.0"
    },
    "env": [
      "CONTENTFUL_SPACE_ID",
      "CONTENTFUL_ACCESS_TOKEN",
      "CONTENTFUL_PREVIEW_TOKEN",
      "CONTENTFUL_REVALIDATE_SECRET"
    ]
  },
  "postInstall": "Create content types in Contentful dashboard at https://app.contentful.com"
}

