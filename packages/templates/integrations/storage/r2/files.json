{
  "id": "r2",
  "name": "Cloudflare R2",
  "category": "storage",
  "description": "S3-compatible object storage with zero egress fees",
  "files": [
    { "path": "lib/storage/r2.ts", "template": "lib/r2.ts" },
    { "path": "lib/storage/upload.ts", "template": "lib/upload.ts" },
    { "path": "app/api/upload/route.ts", "template": "app/api/upload/route.ts" },
    { "path": "app/api/upload/presigned/route.ts", "template": "app/api/upload/presigned/route.ts" },
    { "path": "components/storage/FileUpload.tsx", "template": "components/FileUpload.tsx" },
    { "path": "components/storage/FilePreview.tsx", "template": "components/FilePreview.tsx" },
    { "path": "hooks/useUpload.ts", "template": "hooks/useUpload.ts" }
  ],
  "dependencies": {
    "npm": {
      "@aws-sdk/client-s3": "^3.500.0",
      "@aws-sdk/s3-request-presigner": "^3.500.0"
    },
    "env": [
      "R2_ACCOUNT_ID",
      "R2_ACCESS_KEY_ID",
      "R2_SECRET_ACCESS_KEY",
      "R2_BUCKET_NAME",
      "NEXT_PUBLIC_R2_PUBLIC_URL"
    ]
  },
  "postInstall": "Create an R2 bucket in Cloudflare dashboard at https://dash.cloudflare.com"
}

