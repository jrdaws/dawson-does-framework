{
  "id": "uploadthing",
  "name": "Uploadthing",
  "category": "storage",
  "version": "1.0.0",
  "description": "File uploads with Uploadthing - simple, fast, and type-safe",
  "files": [
    {
      "path": "lib/uploadthing.ts",
      "template": "lib/uploadthing.ts",
      "transform": "none"
    },
    {
      "path": "app/api/uploadthing/core.ts",
      "template": "app/api/uploadthing/core.ts",
      "transform": "none"
    },
    {
      "path": "app/api/uploadthing/route.ts",
      "template": "app/api/uploadthing/route.ts",
      "transform": "none"
    },
    {
      "path": "components/upload/UploadButton.tsx",
      "template": "components/UploadButton.tsx",
      "transform": "none"
    },
    {
      "path": "components/upload/UploadDropzone.tsx",
      "template": "components/UploadDropzone.tsx",
      "transform": "none"
    },
    {
      "path": "components/upload/FilePreview.tsx",
      "template": "components/FilePreview.tsx",
      "transform": "none"
    },
    {
      "path": "hooks/useUpload.ts",
      "template": "hooks/useUpload.ts",
      "transform": "none"
    }
  ],
  "dependencies": {
    "npm": {
      "uploadthing": "^6.13.0",
      "@uploadthing/react": "^6.7.0"
    },
    "npmDev": {},
    "env": [
      {
        "name": "UPLOADTHING_SECRET",
        "description": "Your Uploadthing secret key",
        "required": true,
        "example": "sk_live_...",
        "public": false
      },
      {
        "name": "UPLOADTHING_APP_ID",
        "description": "Your Uploadthing app ID",
        "required": true,
        "example": "xxxxxxxx",
        "public": false
      }
    ]
  },
  "postInstall": [
    "1. Create an account at https://uploadthing.com",
    "2. Create an app and get your API keys",
    "3. Add UPLOADTHING_SECRET and UPLOADTHING_APP_ID to .env.local",
    "4. Configure allowed file types in app/api/uploadthing/core.ts"
  ]
}

