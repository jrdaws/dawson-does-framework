{
  "id": "openai",
  "name": "OpenAI",
  "category": "ai",
  "version": "1.0.0",
  "description": "AI-powered features with OpenAI GPT models and embeddings",
  "files": [
    {
      "path": "lib/ai/openai.ts",
      "template": "lib/openai.ts",
      "transform": "none"
    },
    {
      "path": "lib/ai/embeddings.ts",
      "template": "lib/embeddings.ts",
      "transform": "none"
    },
    {
      "path": "components/ai/ChatInterface.tsx",
      "template": "components/ChatInterface.tsx",
      "transform": "none"
    },
    {
      "path": "components/ai/ChatMessage.tsx",
      "template": "components/ChatMessage.tsx",
      "transform": "none"
    },
    {
      "path": "components/ai/ChatInput.tsx",
      "template": "components/ChatInput.tsx",
      "transform": "none"
    },
    {
      "path": "hooks/useChat.ts",
      "template": "hooks/useChat.ts",
      "transform": "none"
    },
    {
      "path": "app/api/ai/chat/route.ts",
      "template": "app/api/chat/route.ts",
      "transform": "none"
    },
    {
      "path": "app/api/ai/completion/route.ts",
      "template": "app/api/completion/route.ts",
      "transform": "none"
    }
  ],
  "dependencies": {
    "npm": {
      "openai": "^4.50.0",
      "ai": "^3.2.0"
    },
    "npmDev": {},
    "env": [
      {
        "name": "OPENAI_API_KEY",
        "description": "Your OpenAI API key",
        "required": true,
        "example": "sk-...",
        "public": false
      },
      {
        "name": "OPENAI_MODEL",
        "description": "Default model to use (optional)",
        "required": false,
        "example": "gpt-4o",
        "public": false
      }
    ]
  },
  "postInstall": [
    "1. Get your API key from https://platform.openai.com/api-keys",
    "2. Add OPENAI_API_KEY to your .env.local",
    "3. (Optional) Set OPENAI_MODEL for a different default model"
  ],
  "mergeInto": []
}

